---
// No necesitamos props
---

<div class="listaProductos">
  <ul id="producto-list">
    <!-- Productos se insertan aquí desde JS -->
  </ul>

  <div class="text-center mt-4">
    <button id="load-more-button" class="load-more-btn"> Cargar más </button>
  </div>
</div>

<script type="module">
  const BASE_URL =
    "https://api.nuvex.uy/catalog/search/?category=null&ordering=-updated_at&page=";
  let currentPage = 1;
  let hasMore = true;

  const listElement = document.getElementById("producto-list");
  const loadMoreButton = document.getElementById("load-more-button");

  async function fetchProductos(page) {
    const res = await fetch(`${BASE_URL}${page}&s=`);
    const data = await res.json();
    return data.data || [];
  }

  function renderProducto(producto) {
    const li = document.createElement("li");
    li.innerHTML = `
      <article class="producto_card">
        <img src="${producto.image_1?.full_size || ""}" alt="${producto.name}" />
        <h2>${producto.name}</h2>
        <p>${producto.description || ""}</p>
        <span class="price">$${producto.price}</span>
      </article>
    `;
    return li;
  }

  async function loadProductos() {
    if (!hasMore) return;

    loadMoreButton.disabled = true;
    loadMoreButton.textContent = "Cargando...";

    const nuevosProductos = await fetchProductos(currentPage);

    if (nuevosProductos.length === 0) {
      hasMore = false;
      loadMoreButton.style.display = "none";
      return;
    }

    nuevosProductos.forEach((producto) => {
      const li = renderProducto(producto);
      listElement.appendChild(li);
    });

    currentPage += 1;
    loadMoreButton.disabled = false;
    loadMoreButton.textContent = "Cargar más";
  }

  loadMoreButton.addEventListener("click", loadProductos);

  // Carga inicial
  loadProductos();
</script>

<style>
.listaProductos {
  max-width: var(--max-width-container);
  margin: 0 auto;
  padding: 40px 24px;
  background: var(--principal-background-color-light);
  border-radius: 18px;
  box-shadow: 0 4px 24px 0 rgba(163, 174, 214, 0.10);
  margin-top: 24px;
  /* Elimina display: grid y grid-template-columns */
  /* display: block; (por defecto) */
}

.listaProductos ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  grid-template-columns: 1fr;
  gap: 2em;
}
.producto_card {
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 12px #c3aed633;
  padding: 18px 12px;
  margin: 18px;
  transition: box-shadow 0.18s, transform 0.15s;
}
.producto_card:hover {
  box-shadow: 0 6px 24px #a7c7e733;
  transform: translateY(-4px) scale(1.03);
}
  .producto_card img {
    width: 100%;
    aspect-ratio: 1/1;
    object-fit: cover;
    border-radius: 14px;
    box-shadow: 0 2px 8px #a7c7e733;
    background: #fff;
  }
  .producto_card h2 {
    color: #232946;
    font-size: 1.15rem;
    font-weight: 700;
    margin: 0.2rem 0 0.1rem 0;
    text-align: center;
    letter-spacing: 0.5px;
  }
  .producto_card p {
    margin: 0.1rem 0;
    text-align: center;
  }
  .listaProductos li {
  margin: 0; /* El gap del grid ya separa */
}
  .producto_card .price {
    color: #fff;
    font-size: 1.18rem;
    font-weight: bold;
    background: linear-gradient(90deg, #b7eac5 60%, #f7cac9 100%);
    padding: 0.22em 1em;
    border-radius: 10px;
    margin: 0.3em 0;
    letter-spacing: 0.5px;
    box-shadow: 0 1px 4px #b7eac555;
  }
  .load-more-btn {
    padding: 0.6em 1.4em;
    background: linear-gradient(90deg, #a7c7e7 40%, #c3aed6 100%);
    color: #232946;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition:
      background 0.18s,
      color 0.18s,
      transform 0.15s;
    margin-top: 10px;
  }
  .load-more-btn:hover,
  .load-more-btn:focus {
    background: linear-gradient(90deg, #f7cac9 40%, #b7eac5 100%);
    color: #232946;
    transform: scale(1.04);
  }
  @media (min-width: 600px) {
  .listaProductos ul {
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  }
}
</style>
